@model DisplayListOfNewsViewModel

<div class="container mt-5">
    <div class="list-group">
        @foreach (var news in Model.News)
        {
            <div class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3">
                        <a href="@Url.Action("NewsDetails", "News", new { id = news.Id })">
                            <img src="@news.ImageUrl" id="newsImg" class="img-fluid rounded" alt="@news.Title">
                        </a>
                    </div>
                    <div class="col-9 align-items-start">
                        <h6 class="card-title">
                            <a href="@Url.Action("NewsDetails", "News", new { id = news.Id })">@news.Title</a>
                        </h6>
                        <p class="card-text">@news.Date?.ToString("dddd, dd MMMM yyyy")</p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

<nav id="nav-pagination" aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)">Previous</a>
            </li>
        }

        @if (Model.TotalPages <= 5)
        {
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageNumber)
                {
                    <li class="page-item active"><a class="page-link">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="?pageNumber=@i">@i</a></li>
                }
            }
        }
        else
        {
            @if (Model.PageNumber <= 2)
            {
                for (int i = 1; i <= 5; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="?pageNumber=@i">@i</a></li>
                    }
                }
            }
            else if (Model.PageNumber >= Model.TotalPages - 1)
            {
                for (int i = Model.TotalPages - 4; i <= Model.TotalPages; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="?pageNumber=@i">@i</a></li>
                    }
                }
            }
            else
            {
                for (int i = (int)Model.PageNumber - 2; i <= Model.PageNumber + 2; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="?pageNumber=@i">@i</a></li>
                    }
                }
            }
        }

        @if (Model.PageNumber < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)">Next</a>
            </li>
        }
    </ul>
</nav>






