@model DisplayListOfNewsViewModel

<div class="container mt-5">
    <div class="list-group">
        @foreach (var news in Model.News)
        {
            <div class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3">
                        <img src="@news.ImageUrl" id="newsImg" class="img-fluid rounded" alt="@news.Title">
                    </div>
                    <div class="col-9 align-items-start">
                        <h6 class="card-title">@news.Title</h6>
                        <p class="card-text">@news.Date?.ToString("dddd, dd MMMM yyyy")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)&amp;pageSize=@Model.NumberOfNewsOnPage">Previous</a>
            </li>
        }

        @if (Model.TotalPages > 1)
        {
            @if (Model.PageNumber > 3)
            {
                <li class="page-item"><a class="page-link" href="?pageNumber=@(1)&amp;pageSize=@Model.NumberOfNewsOnPage">1</a></li>
                <li class="page-item disabled"><a class="page-link">...</a></li>
            }
            @for (int i = Math.Max(2, (byte)Model.PageNumber - 2); i <= Math.Min((byte)Model.PageNumber + 2, Model.TotalPages - 1); i++)
            {
                if (i == Model.PageNumber)
                {
                    <li class="page-item active"><a class="page-link">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="?pageNumber=@i&amp;pageSize=@Model.NumberOfNewsOnPage">@i</a></li>
                }
            }
            @if (Model.PageNumber < Model.TotalPages - 2)
            {
                <li class="page-item disabled"><a class="page-link">...</a></li>
                <li class="page-item"><a class="page-link" href="?pageNumber=@(Model.TotalPages)&amp;pageSize=@Model.NumberOfNewsOnPage">@Model.TotalPages</a></li>
            }
        }

        @if (Model.PageNumber < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)&amp;pageSize=@Model.NumberOfNewsOnPage">Next</a>
            </li>
        }
    </ul>
</nav>




