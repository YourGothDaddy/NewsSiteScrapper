@model DisplayNewsViewModel
<div class="container mt-5">
    <h1 class="text-center">@Model.Title</h1>
    <div class="row mt-5 text-center">
        <div class="col-md-10 offset-md-1">
            <img src="@Model.ImageSrc" class="img-fluid" alt="News Image">
            <div style="text-align: left;">
                @foreach (var contentItem in @Model.Content)
                {
                    <p class="mt-3">@Html.Raw(contentItem)</p>
                }
            </div>
        </div>
    </div>
</div>
